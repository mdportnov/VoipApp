<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TableLayout
        android:id="@+id/numpad_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout android:gravity="center_horizontal">

            <EditText
                android:id="@+id/input_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/input_number"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/input_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:src="@drawable/ic_backspace_24"
                android:textSize="@dimen/numpad_btn_fontsize" />

            <ImageButton
                android:id="@+id/num_pad_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:src="@drawable/ic_baseline_close_24"
                android:textSize="@dimen/numpad_btn_fontsize" />

        </LinearLayout>

        <TableRow>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNumpad1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/numpad_btn_fontsize"
                android:textStyle="bold"
                app:strokeColor="@color/colorPrimaryDark" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNumpad2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="2"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/numpad_btn_fontsize"
                android:textStyle="bold"
                app:strokeColor="@color/colorPrimaryDark" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNumpad3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="3"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/numpad_btn_fontsize"
                android:textStyle="bold"
                app:strokeColor="@color/colorPrimaryDark" />

        </TableRow>

        <TableRow>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNumpad4"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="4"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/numpad_btn_fontsize"
                android:textStyle="bold"
                app:strokeColor="@color/colorPrimaryDark" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNumpad5"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="5"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/numpad_btn_fontsize"
                android:textStyle="bold"
                app:strokeColor="@color/colorPrimaryDark" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNumpad6"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="6"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/numpad_btn_fontsize"

                android:textStyle="bold"
                app:strokeColor="@color/colorPrimaryDark" />

        </TableRow>

        <TableRow>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNumpad7"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="7"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/numpad_btn_fontsize"

                android:textStyle="bold"
                app:strokeColor="@color/colorPrimaryDark" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNumpad8"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:text="8"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/numpad_btn_fontsize"
                android:textStyle="bold"
                app:strokeColor="@color/colorPrimaryDark" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNumpad9"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="9"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/numpad_btn_fontsize"
                android:textStyle="bold"
                app:strokeColor="@color/colorPrimaryDark" />

        </TableRow>

        <TableRow>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNumpadStar"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="*"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/numpad_btn_fontsize"
                android:textStyle="bold"
                app:strokeColor="@color/colorPrimaryDark" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNumpad0"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="0"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/numpad_btn_fontsize"
                android:textStyle="bold"
                app:strokeColor="@color/colorPrimaryDark" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNumpadPound"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="#"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/numpad_btn_fontsize"
                android:textStyle="bold"
                app:strokeColor="@color/colorPrimaryDark" />

        </TableRow>

    </TableLayout>

</layout>
