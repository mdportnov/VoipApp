<!--                        android:orientation="horizontal">-->

<!--                        <RadioButton-->
<!--                            android:id="@+id/units"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="match_parent"-->
<!--                            android:background="@drawable/toggle_widget_background"-->
<!--                            android:button="@drawable/ic_toggle_off" />-->

<!--                        <RadioButton-->
<!--                            android:id="@+id/users"-->
<!--                            android:layout_width="40dp"-->
<!--                            android:layout_height="40dp"-->
<!--                            android:layout_marginTop="1dp"-->
<!--                            android:layout_marginRight="1dp"-->
<!--                            android:layout_marginBottom="1dp"-->
<!--                            android:background="@drawable/toggle_widget_background"-->
<!--                            android:button="@drawable/ic_toggle_on" />-->
<!--                    </RadioGroup>-->

                    <com.polyak.iconswitch.IconSwitch
                        android:id="@+id/switch_search_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:isw_background_color="#E3E3E3"
                        app:isw_icon_left="@drawable/ic_toggle_off"
                        app:isw_icon_right="@drawable/ic_toggle_on" />
                </LinearLayout>
            </FrameLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
</layout>
